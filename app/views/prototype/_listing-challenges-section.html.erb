<section>
  <h3><a name="listing-challenges">Listing challenges</a></h3>

  <script type="text/javascript">
    function fetchChallengesBody() {
      return {
        operationName: "Challenges",
        query: `query Challenges {
          challenges {
            id
            title
            description
          }
        }`
      }
    }

    function fetchChallenges(event) {
      const authToken = document.getElementById("auth-token").value;
      const body = fetchChallengesBody();
      const preElement = document.getElementById("challenges-call-result");
      preElement.innerHTML = '...'

      fetchGraphql(authToken, body, preElement);

      event.preventDefault ? event.preventDefault() : event.returnValue = false;
    }
  </script>

  <form>
    <div class="form-group">
      <label>Auth token</label>
      <input
        id="auth-token"
        type="text"
        class="form-control"
        placeholder="auth token from /admin/users"
        value="<%= @jwt %>"
        />
    </div>
    <div>
      <button class="btn btn-primary" onClick="fetchChallenges(event)">
        fetch challenges
      </button>
    </div>
  </form>
  <div>
    <strong>Result</strong>
    <pre id="challenges-call-result">...</pre>
  </div>

  <div id="accordion" class="mt-3">
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseListing" aria-expanded="false" aria-controls="collapseTwo">
            Code Sample
          </button>
        </h5>
      </div>
      <div id="collapseListing" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
        <div class="card-body">
          <pre>
