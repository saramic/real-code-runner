<section>
  <h3><a name="uploading-a-challenge">Uploading a challenge</a></h3>

  <div data-widget-type="rcp-UploadChallenge" data-token="<%= @jwt %>"></div>

  <script type="text/javascript" src="<%= @host %>/application.js"></script>

  <div id="accordion" class="mt-3">
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseUploading" aria-expanded="false" aria-controls="collapseTwo">
            Code Sample - javascript widget
          </button>
        </h5>
      </div>
      <div id="collapseUploading" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
        <div class="card-body">
          <pre>
<%=
  '
<div class="rcp-upload-challenge-widget" data-token=""></div>

<script type="text/javascript" src="' + @host + '/application.js"></script>
'
%>
          </pre>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseUploadingBasicForm" aria-expanded="false" aria-controls="collapseTwo">
            Code Sample - basic form
          </button>
        </h5>
      </div>
      <div id="collapseUploadingBasicForm" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
        <div class="card-body">
          <pre>
<%=
  '
<form
  action= "' + URI(request.protocol + request.host_with_port).to_s + '/challenges"
  method="post"
  enctype="multipart/form-data"
>
  <input
    name="user_token"
    type="hidden"
    value="' + @jwt + '"
  />
  <div>
    <label>Title</label
    ><input name="challenge[title]" type="text" />
  </div>
  <div>
    <label>Description</label
    ><input name="challenge[description]" type="text" />
  </div>
  <div>
    <label>Test case</label
    ><input name="challenge[test_case]" type="file" />
  </div>
  <button>upload</button>
</form>
'
%>
          </pre>
        </div>
      </div>
    </div>
  </div>
</section>
