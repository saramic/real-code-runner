<section>
  <h3><a name="uploading-a-submission">Uploading a submission</a></h3>

  <div data-widget-type="rcp-UploadSubmission" data-token="<%= @jwt %>"></div>

  <script type="text/javascript" src="<%= @host %>/application.js"></script>

  <div id="accordion" class="mt-3">
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseUploadSubmission" aria-expanded="false" aria-controls="collapseTwo">
            Code Sample - javascript widget
          </button>
        </h5>
      </div>
      <div id="collapseUploadSubmission" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
        <div class="card-body">
          <pre>
<%=
  '
<div data-widget-type="rcp-UploadSubmission" data-token="' + @jwt + '"></div>

<script type="text/javascript" src="' + @host + '/application.js"></script>
'
%>
          </pre>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseUploadSubmissionBasicForm" aria-expanded="false" aria-controls="collapseTwo">
            Code Sample - basic form
          </button>
        </h5>
      </div>
      <div id="collapseUploadSubmissionBasicForm" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
        <div class="card-body">
          <pre>
<%=
  '
<form
  action= "' + URI(request.protocol + request.host_with_port).to_s + '/submissions"
  method="post"
  enctype="multipart/form-data"
>
  <input
    name="user_token"
    type="hidden"
    value="' + @jwt + '"
  />
  <div>
    <label>Challenge ID</label
    ><input
      name="submission[challenge_id]"
      type="text"
    />
  </div
  <div>
    <label>External user identifier</label
    ><input
      name="submission[external_user_identifier]"
      type="text"
    />
  </div>
  <div>
    <label>URL</label
    ><input name="submission[url]" type="text" />
  </div
  <div>
    <label>text</label
    ><input name="submission[text]" type="text" />
  </div>
  <div>
    <label>file</label
    ><input name="submission[file]" type="file" />
  </div>
  <button>submit</button>
</form>
'
%>
          </pre>
        </div>
      </div>
    </div>
  </div>
</section>
